{
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./lib",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "vue-types": [
        "node_modules/vue-types/"
      ]
    },
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.ts",
  ],
  "exclude": [
    "**/__test__/**"
  ]
}
