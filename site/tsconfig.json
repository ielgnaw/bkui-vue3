{
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "../packages",
    "jsx": "preserve",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "paths": {
      "@bkui-vue/*": ["*/src"]
    },
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["*.ts", "*.tsx", "*.js"]
}
