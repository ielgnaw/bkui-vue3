{
  "name": "@ielgnaw/monorepo",
  "private": true,
  "packageManager": "pnpm@7.0.0",
  "version": "0.0.1-beta.1",
  "workspaces": {
    "packages": [
      "packages/!(**.bak)*",
      "scripts/*"
    ]
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "1prepare": "husky install",
    "1dev": "vite serve site",
    "1build": "run-p build:dist build:lib",
    "1build:site": "vite build site --mode development",
    "1build:dist": "rimraf dist && lerna run --stream --scope cli dist",
    "1build:lib": "rimraf lib && lerna run --stream --scope cli lib",
    "1help:release": "lerna run --stream --scope cli release",
    "1release": "run-s build help:release",
    "1analyze:lib": "rimraf lib && lerna run --stream --scope cli lib -- -a",
    "1generate:icon": "lerna run --scope @bkui-vue/icon build",
    "1changelog": "conventional-changelog -c .changelog.config.js -p angular -i CHANGELOG.md -s -l",
    "1lint:packages": "eslint ./packages --ext .js,.ts,.tsx --cache",
    "1lint:site": "eslint ./site --ext .js,.ts,.tsx,.vue --cache",
    "1lint:scripts": "eslint ./scripts --ext .js,.ts,.tsx --cache",
    "1lint": "run-p lint:site lint:packages lint:scripts",
    "1fix:packages": "eslint ./packages --ext .js,.ts,.tsx --fix --cache",
    "1fix:site": "eslint ./site --ext .js,.ts,.tsx,.vue --fix --cache",
    "1fix:scripts": "eslint ./scripts --ext .js,.ts,.tsx --fix --cache",
    "1lint:fix": "run-p lint:site lint:packages lint:scripts",
    "1stylelint": "stylelint ./{packages,site}/**/*.{vue,less} --custom-syntax",
    "1stylelint:fix": "stylelint --fix ./{packages,site}/**/*.{vue,less} --custom-syntax",
    "1cz": "git-cz",
    "test": "vitest --config ./packages/site/vite.config.ts",
    "test:coverage": "vitest --run --coverage --config ./packages/site/vite.config.ts",
    "dev": "pnpm -C packages/site dev",
    "build": "pnpm -r build",
    "clean:node_modules": "ts-node scripts/clean-node-modules.ts",
    "2build:dist": "rimraf dist && lerna run --stream --scope cli dist",
    "build:dist": "rimraf dist && pnpm -C packages/cli dist"
  },
  "devDependencies": {
    "@babel/core": "~7.17.9",
    "@babel/plugin-transform-runtime": "~7.17.0",
    "@babel/preset-env": "~7.16.11",
    "@babel/preset-typescript": "~7.16.7",
    "@commitlint/cli": "~16.2.3",
    "@commitlint/config-conventional": "~16.2.1",
    "@types/node": "~17.0.23",
    "@types/postcss-less": "~4.0.2",
    "@typescript-eslint/eslint-plugin": "~5.19.0",
    "@typescript-eslint/parser": "~5.19.0",
    "@vitejs/plugin-vue": "~2.3.1",
    "@vitejs/plugin-vue-jsx": "~1.3.9",
    "@vue/babel-plugin-jsx": "~1.1.1",
    "@vue/eslint-config-standard": "~6.1.0",
    "@vue/eslint-config-typescript": "~10.0.0",
    "@vue/test-utils": "~2.0.0-rc.12",
    "c8": "~7.11.3",
    "clipboard": "~2.0.8",
    "commitizen": "~4.2.4",
    "conventional-changelog-cli": "~2.2.2",
    "cross-env": "~7.0.3",
    "css-loader": "~6.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.13.0",
    "eslint-config-tencent": "~1.0.4",
    "eslint-plugin-codecc": "~0.1.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-promise": "~6.0.0",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "eslint-plugin-vue": "~8.6.0",
    "highlight.js": "~11.5.1",
    "husky": "~7.0.1",
    "jsdom": "~19.0.0",
    "lerna": "~4.0.0",
    "less": "~4.1.2",
    "less-loader": "~10.2.0",
    "lint-staged": "~12.3.7",
    "markdown-it-container": "~3.0.0",
    "normalize-wheel": "~1.0.1",
    "npm-run-all": "~4.1.5",
    "plop": "~3.0.5",
    "postcss": "~8.4.12",
    "postcss-html": "~1.4.1",
    "postcss-less": "~6.0.0",
    "prettier": "~2.6.2",
    "prismjs": "~1.27.0",
    "resize-observer-polyfill": "~1.5.1",
    "rimraf": "~3.0.2",
    "stylelint": "~14.6.1",
    "stylelint-config-recommended-vue": "~1.4.0",
    "stylelint-order": "~5.0.0",
    "stylelint-scss": "~4.2.0",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.3",
    "unplugin-vue-define-options": "~0.6.1",
    "vite": "~2.9.1",
    "vite-plugin-md": "~0.12.4",
    "vitest": "~0.12.6",
    "vue": "^3.2.0",
    "vue-eslint-parser": "~8.3.0",
    "vue-router": "~4.0.14",
    "vue-types": "~4.1.1"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "lint-staged": {
    "scripts/**/*.(vue|ts|tsx|js)": [
      "eslint ./scripts --ext .js,.tsx,.ts --cache --fix",
      "git add"
    ],
    "site/**/*.(vue|ts|tsx|js)": [
      "eslint ./site --ext .js,.tsx,.ts,.vue --cache --fix --ignore-pattern site/dist/",
      "git add"
    ],
    "packages/**/*.(vue|ts|tsx|js)": [
      "eslint ./packages --ext .js,.tsx,.ts --cache --fix",
      "git add"
    ],
    "*.(vue|scss|css|sass|less)": [
      "stylelint --cache --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ],
      "allowedVersions": {
        "eslint": "^8.6.0",
        "eslint-plugin-promise": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "eslint-plugin-vue": "^8.3.0",
        "semantic-release": "^15.0.0",
        "prettier": "~2.6.2"
      }
    }
  }
}
