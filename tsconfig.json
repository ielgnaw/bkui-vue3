{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "./",
    "paths": {
      "@bkui-vue/*": [
        "*/packages"
      ],
      "@ielgnaw/*": [
        "*/packages"
      ]
    },
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true,
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}